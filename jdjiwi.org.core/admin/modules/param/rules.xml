			<rule id="catalog.group.color">
				<elements>
					<element>color/edit</element>
					<element>color/list</element>
				</elements>
			</rule>
			<rule id="catalog.group.discount">
				<elements>
					<element>discount/edit</element>
					<element>discount/list</element>
				</elements>
			</rule>
