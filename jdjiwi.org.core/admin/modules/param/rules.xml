		<menu>

		</menu>
		<pages>
			<page name="/admin/param/group/" subpath="list"/>
			<page name="/admin/param/group/edit/"/>
			<page name="/admin/param/group/select/"/>
			<page name="/admin/param/group/notice/"/>
			<page name="/admin/param/" subpath="list"/>
